<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuranApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quranapp.QuranApp.QuranAppActivity"
            android:label="Quran App"
            tools:ignore="Instantiatable">
    </activity>
        <activity
            android:name="com.example.quranapp.QuranApp.SurahList"
            android:label="Quran App Surah List"
            tools:ignore="Instantiatable">
        </activity>
        <activity
            android:name="com.example.quranapp.QuranApp.SurahRead"
            android:label="Quran App Surah Read"
            tools:ignore="Instantiatable">
        </activity>
        <activity
            android:name="com.example.quranapp.QuranApp.SurahBookmarks"
            android:label="Quran App Surah Bookmarks"
            tools:ignore="Instantiatable">
        </activity>
        <activity
            android:name="com.example.quranapp.QuranApp.SurahLoginActivity"
            android:label="Quran App Surah Login"
            tools:ignore="Instantiatable">
        </activity>
        <activity
            android:name="com.example.quranapp.QuizGame.QuizAppActivity"
            android:label="Islamic Quiz Game"
            tools:ignore="Instantiatable">
        </activity>

    </application>

</manifest>