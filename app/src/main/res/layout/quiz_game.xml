<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/endButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E41212"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="End"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/highScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="High Score: 0"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/alef"
        android:gravity="center"
        android:text="Question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/optionATextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="A"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@id/questionTextView"
        app:layout_constraintStart_toStartOf="@id/questionTextView"
        app:layout_constraintTop_toBottomOf="@id/questionTextView" />

    <Button
        android:id="@+id/optionBTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="B"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@id/optionATextView"
        app:layout_constraintStart_toStartOf="@id/optionATextView"
        app:layout_constraintTop_toBottomOf="@id/optionATextView" />

    <Button
        android:id="@+id/optionCTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="C"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@id/optionBTextView"
        app:layout_constraintStart_toStartOf="@id/optionBTextView"
        app:layout_constraintTop_toBottomOf="@id/optionBTextView" />

    <Button
        android:id="@+id/optionDTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="D"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@id/optionCTextView"
        app:layout_constraintStart_toStartOf="@id/optionCTextView"
        app:layout_constraintTop_toBottomOf="@id/optionCTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
