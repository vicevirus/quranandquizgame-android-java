<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Customize the button's pressed state background -->
            <solid android:color="@color/custom_button_pressed_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Customize the button's default state background -->
            <solid android:color="@color/custom_button_default_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
